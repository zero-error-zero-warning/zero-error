<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.GoodsCategoryMapper">
    <insert id="addGoodsCategory">
        insert into goodscategory
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="goodsCategoryId!=null" >
                goodsCategoryId,
            </if>
            <if test="category!=null">
                category,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="goodsCategoryId!=null">
                #{goodsCategoryId,jdbcType=INTEGER},
            </if>
            <if test="category!=null">
                #{category,jdbcType=VARCHAR}
            </if>
        </trim>
    </insert>
    <delete id="deleteGoodsCategory"></delete>
    <select id="getGoodsCategoryByDefault"></select>
    <select id="getGoodsCategoryById"></select>
</mapper>